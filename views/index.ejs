<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
  <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script> -->
</head>

<body>
  <div class="container">
    <h1>My Tasks</h1>
    <a id="newPostBtn" href="/new">New Task</a>
    <ul id="postsList">
      <% content.filter((a)=> !a.completed).forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <p>
            <%=post.content%>
          </p>
          
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
          <a class="complete" href="/api/posts/complete/<%= post.id %>">Complete</a>
        </li>
        <% }); %>
    </ul>

    <div>
        <ul id="postsList">
            <% content.filter((a)=> a.completed).forEach(post=> { %>
              <li>
                <h2>
                  <%=post.title%>
                </h2>
                <small>
                  <%=post.date %>
                </small>
                <p>
                  <%=post.content%>
                </p>
                
                <a class="edit" href="/edit/<%= post.id %>">Edit</a>
                <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
              </li>
              <% }); %>
          </ul>
    </div>
  </div>

</body>

</html>